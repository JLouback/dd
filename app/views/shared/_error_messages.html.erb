<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      O formulario nao foi preenchido corretamente:
      <ul>
      <% @user.errors.each do |attr, msg| %>
        <% if @user.errors[attr].first == msg %>
          <li><%= msg %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>